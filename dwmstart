#!/bin/bash
#Script by Ypnose  <linuxien[AT]legtux[DOT]org>

#Logs
urxvt -geometry 80x23+625+20 -name temp -title temp -e sh -c "watch -n15 sensors" &
urxvt -geometry 80x23+50+20 -name xlog -title xlog -e sh -c "tail -n 30 -f ~/.log/xlog | ccze -A" &
#urxvt -geometry 80x23 -name dwmlog -title dwmlog -e sh -c "tail -f ~/.log/dwmlog | ccze -A" &

UNA=$(uname -r)
DAT=$(date "+%^a %d %^b" | sed 's/Ã©/E/')
while true
do
    TEM=$(nvidia-smi -q -d TEMPERATURE | awk 'NR == 10 {print $3}')
    BAR=$(echo -e "\x02ker \x03$UNA \x02gpu \x03$TEM C \x02$DAT\x04 / \x03$(date +%R)")
    xsetroot -name "$BAR "
    sleep 1m
done &
dwm 2> $HOME/.log/dwmlog
