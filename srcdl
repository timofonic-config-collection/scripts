#!/bin/sh
#   Script by Ypnose  <linuxien[AT]legtux[DOT]org>
#   Remove existing pkg / src folders

if [ -d "pkg" ]; then
	printf "\e[0;31m%s\e[0m\n" "Deleting pkg directory!"
	rm -r pkg
else
	printf "\e[0;32m%s\e[0m\n" "Directory pkg not found!"
fi
if [ -d "src" ]; then
	printf "\e[0;31m%s\e[0m\n" "Deleting src directory!"
	rm -rf src
else
	printf "\e[0;32m%s\e[0m\n" "Directory src not found!"
fi

exit 0
